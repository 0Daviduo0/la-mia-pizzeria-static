@model Pizza

<div class="container">
        <div class="card">
        <img src="@Model.Img" alt="Pizza1">
            <div class="card-body">
            <h5 class="card-title">@Model.Nome</h5>
                <p class="card-text">
                @Model.Descrizione
                </p>
            <h6>@Model.Prezzo&euro;</h6>
            <p>
                <strong>Categoria:</strong>

                @if (Model.Category != null)
                {
                    @Model.Category.Nome
                }
                else
                {
                    <span>Non è stata selezionata alcuna categoria</span>
                }
            </p>

            <div>
                <strong>Ingredienti: </strong>
                @foreach (Ingredients ingredient in Model.Ingredients)
                {
                    <span> @ingredient.Name;</span>
                }
            </div>

            <div class="UpdateButn">
                <a href="@Url.Action("Update", "Pizza", new {Id = Model.Id})" class="btn btn-primary">Modifica pizza</a>
            </div>

            <div class="DeleteButn">
                <form asp-controller="Pizza" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    <button class="btn btn-danger" type="submit">Cancella la pizza</button>
                </form>
            </div>

            </div>
        </div>
</div>